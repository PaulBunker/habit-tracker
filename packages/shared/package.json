{
  "name": "@habit-tracker/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for habit tracker",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "typesVersions": {
    "*": {
      "daemon-client": ["./dist/esm/daemon-client.d.ts"]
    }
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./daemon-client": {
      "node": {
        "import": {
          "types": "./dist/esm/daemon-client.d.ts",
          "default": "./dist/esm/daemon-client.js"
        },
        "require": {
          "types": "./dist/cjs/daemon-client.d.ts",
          "default": "./dist/cjs/daemon-client.js"
        }
      }
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "dev": "npm run build:esm -- --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
