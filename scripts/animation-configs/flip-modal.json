{
  "name": "FLIP Modal Animation",
  "description": "Card-to-modal FLIP animation from habit tracker",
  "url": "http://localhost:5174/",
  "postNavWait": 500,
  "viewport": { "width": 800, "height": 600 },
  "filmstrip": {
    "scale": 0.5,
    "cols": 5,
    "labelHeight": 16
  },
  "animations": {
    "open": {
      "setup": [{ "waitFor": ".checklist-item" }],
      "trigger": { "click": ".checklist-item" },
      "duration": 800,
      "frames": 16
    },
    "open-end": {
      "setup": [{ "waitFor": ".checklist-item" }, { "click": ".checklist-item" }, { "wait": 300 }],
      "trigger": { "wait": 1 },
      "duration": 250,
      "frames": 10
    },
    "close": {
      "setup": [
        { "waitFor": ".checklist-item" },
        { "click": ".checklist-item" },
        { "wait": 600 }
      ],
      "trigger": { "click": ".close-btn" },
      "duration": 800,
      "frames": 16
    },
    "close-start": {
      "setup": [
        { "waitFor": ".checklist-item" },
        { "click": ".checklist-item" },
        { "wait": 600 }
      ],
      "trigger": { "click": ".close-btn" },
      "duration": 200,
      "frames": 10
    },
    "close-instant": {
      "setup": [
        { "waitFor": ".checklist-item" },
        { "click": ".checklist-item" },
        { "wait": 600 }
      ],
      "trigger": { "click": ".close-btn" },
      "duration": 50,
      "frames": 10
    },
    "open-handoff": {
      "setup": [{ "waitFor": ".checklist-item" }, { "click": ".checklist-item" }, { "wait": 380 }],
      "trigger": { "wait": 1 },
      "duration": 60,
      "frames": 12
    }
  }
}
